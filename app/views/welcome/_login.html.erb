<%= form_with url: login_path, method: :post, local:true do |form| %>
  <%= form.label :username, "Username:", id: "username"%>
  <%= form.text_field :username, required:true, class: "form-control"%>
  <%= form.label :password, "Password:" %>
  <%= form.text_field :password, required: true, class: "form-control" %>
  <%= form.check_box :remember_me, id: "remember_me" %>
  <%= form.label :remember_me, "Remember Me"%><br>
  <%= form.submit "Log In", onclick: "lsRememberMe()" %>
<% end %>
