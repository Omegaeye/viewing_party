<section>
  <%= render "shared/top_rated" %>
  <%= render "shared/find_movies" %>
</section><br><br>

<header>
  <center>Top Rated Movies:</center>
</header>
<section class="">
  <div id="table-wrapper">
    <div id="table-scroll">
      <table class="table table-striped table-borderless" id="movie">
        <thead >
            <th scope="col"><span><h2>Movie Title:</h2></span></th>
            <th scope="col"><span><h2>Vote Average:</h2></span></th>
        </thead>
        <tbody>
          <% @movies.each do |movie| %>
          <tr>
            <td id="movie-<%= movie.id %>">
              <%= link_to movie.title, movie_path(movie.id), method: :get %><br>
            </td>
            <td>
              <%= movie.vote_average %><br>
            </td>
            <td>
              <img src="https://image.tmdb.org/t/p/w200<%=movie.poster_path%>" alt="<%= movie.title %>">
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>
