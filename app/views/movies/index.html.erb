<section>
  <%= render "shared/top_rated" %>
  <%= render "shared/find_movies" %>
</section><br><br>

<header>
  <center>Top Rated Movies:</center>
</header>
<div style="overflow:auto">
  <div class="row flex-row flex-nowrap">
<% @movies.each do |movie| %>
  <div class="col-3">
    <div class="card" style="width:auto;">
      <img class="card-img-top" src="https://image.tmdb.org/t/p/w200<%=movie.poster_path%>" alt="<%= movie.title %>">
      <div class="card-body">
        <h5 class="card-title"><%= link_to movie.title, movie_path(movie.id), method: :get %></h5>
        <div class="progress-bar progress-bar-striped progress-bar-animated"
          role="progressbar"
          aria-valuenow="<%= movie.vote_average %> "
          aria-valuemin="0"
          aria-valuemax="100"
          style="width: 75%"
        >
          Vote Average: <%= movie.vote_average %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
